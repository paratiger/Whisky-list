= form_for @whisky do |f|
  -if @whisky.errors.any?
    #error_explanation
      %h2= "#{pluralize(@whisky.errors.count, "error")} prohibited this whisky from being saved:"
      %ul
        - @whisky.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :body
    = f.text_area :body
  .field
    = f.label :rating
    = f.text_field :rating
  .field
    = f.label :image_url
    = f.text_field :image_url
  .actions
    = f.submit 'Save'
