!!! Strict

%html{html_attrs("en-GB")}
	%head
		%meta{"http-equiv"=>"Content-Type", :content=>"text/html; charset=utf-8"}
		%title My Whisky
		%meta{:name => "description", :content => "My whisky"}
		%meta{:name => "keywords", :content => "whisky, scotch, whiskey"}
		%meta{:name => "language", :content => "en-GB"}
		%meta{:name => "MSSmartTagsPreventParsing", :content => "true"}
		%meta{"http-equiv" => "imagetoolbar", :content => "false"}
		= stylesheet_link_tag 'http://code.jquery.com/mobile/1.0a2/jquery.mobile-1.0a2.min.css'
		= javascript_include_tag 'http://code.jquery.com/jquery-1.4.4.min.js'
		= javascript_include_tag 'http://code.jquery.com/mobile/1.0a2/jquery.mobile-1.0a2.js'
		= csrf_meta_tag
	%body
		%div{"data-role" => "page", "data-theme" => "a"}
			= yield